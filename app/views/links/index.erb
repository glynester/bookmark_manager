<h1> Links </h1>

<form action="/links/new">
  <input type="submit" value="Create New Bookmark">
</form>
<br />
<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      &nbsp&nbsp&nbsp
      URL:   <%= link.url   %>
      &nbsp&nbsp&nbsp
      Tag:
      <%link.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>  
    </li>
  <% end %>
</ul>
